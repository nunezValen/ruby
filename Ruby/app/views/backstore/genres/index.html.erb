<% content_for :title, "Géneros" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Géneros</h1>
  <%= link_to "Nuevo género", new_backstore_genre_path, class: "btn btn-primary" %>
</div>

<% if @genres.any? %>
  <div class="table-responsive card shadow-sm mb-3">
    <table class="table mb-0">
      <thead>
        <tr>
          <th>Nombre</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td>
              <strong><%= genre.name %></strong>
            </td>
            <td class="text-end">
              <div class="d-inline-flex gap-2">
                <%= button_to "Eliminar", [:backstore, genre],
                              method: :delete,
                              class: "btn btn-outline-dark btn-sm",
                              form: { data: { action: "submit->confirm-modal#open",
                                              confirm_message: "¿Estás seguro de que quieres eliminar este género?" } } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @genres %>
  </div>
<% else %>
  <div class="card shadow-sm p-4 text-center">
    <p class="mb-0">No hay géneros registrados.</p>
  </div>
<% end %>
