<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Venta #<%= @sale.id %></h1>

  <div class="d-flex gap-2">
    <%= link_to "Ver PDF",
                backstore_sale_path(@sale, format: :pdf),
                class: "btn btn-primary",
                target: "_blank" %>

    <%= link_to "Volver",
                backstore_sales_path,
                class: "btn btn-outline-dark" %>
  </div>
</div>


<div class="row g-4">
  <div class="col-lg-8">
    <div class="card shadow-sm p-4">
      <h2 class="h5 mb-4">Información del Cliente</h2>
      <table class="table mb-0">
        <tbody>
          <tr>
            <th scope="row" style="width: 200px;">Nombre</th>
            <td><%= @sale.client_name %></td>
          </tr>
          <tr>
            <th scope="row">Email</th>
            <td><%= @sale.client_email %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="card shadow-sm p-4 mt-4">
      <h2 class="h5 mb-4">Información del empleado</h2>
      <table class="table mb-0">
        <tbody>
          <tr>
            <th scope="row" style="width: 200px;">Nombre</th>
            <td><%= @sale.employee_name %></td>
          </tr>
          <tr>
            <th scope="row">Email</th>
            <td><%= @sale.employee_email %></td>
          </tr>
          <tr>
            <th scope="row">Fecha de venta</th>
            <td><%= l(@sale.created_at, format: :long) %></td>
          </tr>
          <tr>
            <th scope="row">Estado</th>
            <td>
              <% if @sale.cancelled_at? %>
                <span class="genre-pill">Cancelada <%= @sale.cancelled_at&.strftime("%d/%m/%Y") %></span>
              <% else %>
                <span class="genre-pill">Activa</span>
              <% end %>
            </td>
          </tr>
          <% if @sale.cancelled_at? %>
            <tr>
              <th scope="row">Fecha de cancelación</th>
              <td><%= l(@sale.cancelled_at, format: :long) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="card shadow-sm p-4 mt-4">
      <h2 class="h5 mb-4">Productos vendidos</h2>
      <div class="table-responsive">
        <table class="table mb-0">
          <thead>
            <tr>
              <th>Producto</th>
              <th class="text-center">Cantidad</th>
              <th class="text-end">Precio unitario</th>
              <th class="text-end">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% @sale.sale_items.each do |item| %>
              <tr>
                <td>
                  <strong><%= item.product.name %></strong>
                  <div class="small text-muted">Autor: <%= item.product.author %></div>
                </td>
                <td class="text-center"><%= item.quantity %></td>
                <td class="text-end">$ <%= number_with_precision(item.unit_price, precision: 2) %></td>
                <td class="text-end"><strong>$ <%= number_with_precision(item.subtotal, precision: 2) %></strong></td>
              </tr>
            <% end %>
          </tbody>
          <tfoot>
            <tr>
              <th colspan="3" class="text-end">Total:</th>
              <th class="text-end">$ <%= number_with_precision(@sale.total_amount, precision: 2) %></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <div class="col-lg-4">
    <div class="card shadow-sm p-4">
      <h2 class="h5 mb-3">Resumen</h2>
      <table class="table mb-0">
        <tbody>
          <tr>
            <th scope="row">Total de productos</th>
            <td class="text-end"><strong><%= @sale.total_items %></strong></td>
          </tr>
          <tr>
            <th scope="row">Total de la venta</th>
            <td class="text-end"><strong>$ <%= number_with_precision(@sale.total_amount, precision: 2) %></strong></td>
          </tr>
        </tbody>
      </table>
    </div>

    <% unless @sale.cancelled? %>
      <div class="card shadow-sm p-4 mt-4">
        <div class="d-flex gap-2">
          <%= button_to "Cancelar venta",
                        cancel_backstore_sale_path(@sale),
                        method: :patch,
                        class: "btn btn-primary w-100",
                        form: { data: { action: "submit->confirm-modal#open",
                                        confirm_message: "¿Cancelar esta venta? El stock será devuelto a los productos." } } %>
        </div>
      </div>
    <% else %>
      <div class="card shadow-sm p-4 mt-4">
        <span class="badge bg-secondary">Venta cancelada</span>
      </div>
    <% end %>
  </div>
</div>

