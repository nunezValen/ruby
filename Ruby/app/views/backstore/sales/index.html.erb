<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Ventas</h1>
  <%= link_to "Nueva venta", new_backstore_sale_path, class: "btn btn-primary" %>
</div>

<% if @sales.any? %>
  <div class="table-responsive card shadow-sm">
    <table class="table mb-0">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Empleado</th>
          <th>Email</th>
          <th>Productos</th>
          <th class="text-end">Total</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @sales.each do |sale| %>
          <tr>
            <td><%= l(sale.created_at, format: :short) %></td>
            <td><strong><%= sale.employee_name %></strong></td>
            <td><%= sale.employee_email %></td>
            <td>
              <span class="badge bg-secondary"><%= sale.total_items %> producto(s)</span>
            </td>
            <td class="text-end">
              <strong>$ <%= number_with_precision(sale.total_amount, precision: 2) %></strong>
            </td>
            <td class="text-end">
              <%= link_to "Ver", [:backstore, sale], class: "btn btn-outline-dark btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="card shadow-sm p-4 text-center">
    <p class="mb-0">No hay ventas registradas.</p>
  </div>
<% end %>

