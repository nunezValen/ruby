<div id="<%= dom_id product %>">
  <div>
    <strong>Name:</strong>
    <%= product.name %>
  </div>

  <div>
    <strong>Description:</strong>
    <%= product.description %>
  </div>

  <div>
    <strong>Author:</strong>
    <%= product.author %>
  </div>

  <div>
    <strong>Unit price:</strong>
    <%= product.unit_price %>
  </div>

  <div>
    <strong>Stock:</strong>
    <%= product.stock %>
  </div>

  <div>
    <strong>Media type:</strong>
    <%= product.media_type %>
  </div>

  <div>
    <strong>State:</strong>
    <%= product.state %>
  </div>

  <div>
    <strong>Received on:</strong>
    <%= product.received_on %>
  </div>

  <div>
    <strong>Retired at:</strong>
    <%= product.retired_at %>
  </div>

  <div>
    <strong>Last updated at:</strong>
    <%= product.last_updated_at %>
  </div>

</div>
