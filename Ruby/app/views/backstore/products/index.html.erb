<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Productos</h1>
  <%= link_to "Nuevo producto", new_backstore_product_path, class: "btn btn-primary" %>
</div>

<div class="filter-links mb-3 d-flex gap-3">
  <%= link_to "Activos", backstore_products_path(filter: :active),
              class: "btn btn-outline-dark#{@filter == 'active' ? ' active' : ''}" %>
  <%= link_to "Dados de baja", backstore_products_path(filter: :retired),
              class: "btn btn-outline-dark#{@filter == 'retired' ? ' active' : ''}" %>
</div>

<% if @products.any? %>
  <div class="table-responsive card shadow-sm mb-3" data-controller="drag-scroll">
    <table class="table mb-0">
      <thead>
        <tr>
          <th>Portada</th>
          <th>Nombre</th>
          <th>Autor</th>
          <th>Descripci√≥n</th>
          <th>Tipo</th>
          <th>Estado</th>
          <th>Precio&nbsp;unitario</th>
          <th>Stock</th>
          <% if @filter == "retired" %>
            <th>Fecha de baja</th>
          <% end %>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td>
              <% if product.cover_image.attached? %>
                <%= image_tag product.cover_image.variant(resize_to_limit: [64, 64]),
                              class: "img-thumbnail",
                              style: "width: 64px; height: 64px; object-fit: cover;" %>
              <% end %>
            </td>
            <td>
              <strong><%= product.name %></strong>
            </td>
            <td><%= product.author %></td>
            <td><%= truncate(product.description, length: 80) %></td>
            <td>
              <%# Tipo: media_type (CD / Vinilo) %>
              <%= product.media_type == "cd" ? "CD" : "Vinilo" %>
            </td>
            <td>
              <%# Estado: nuevo / usado %>
              <%= product.state_new_item? ? "Nuevo" : "Usado" %>
            </td>
            <td>
              $ <%= number_with_precision(product.unit_price, precision: 2) %>
            </td>
            <td><%= product.stock %></td>
            <% if @filter == "retired" %>
              <td><%= product.retired_at&.strftime("%d/%m/%Y") %></td>
            <% end %>
            <td class="text-end">
              <div class="d-inline-flex gap-2">
                <%= link_to "Ver", [:backstore, product], class: "btn btn-outline-dark btn-sm" %>
                <% unless product.retired? %>
                  <%= link_to "Editar", edit_backstore_product_path(product), class: "btn btn-outline-dark btn-sm" %>
                <% end %>
              </div>

              <% if product.state_new_item? && !product.retired? %>
                <%= form_with url: update_stock_backstore_product_path(product), method: :patch, class: "d-inline-flex align-items-center gap-2 ms-3", local: true do |f| %>
                  <%= f.number_field :amount, value: 0, class: "form-control form-control-sm", style: "width: 80px;", required: true %>
                  <%= f.submit "Stock", class: "btn btn-primary btn-sm" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @products %>
  </div>
<% else %>
  <div class="card shadow-sm p-4 text-center">
    <p class="mb-0">No hay productos en este filtro.</p>
  </div>
<% end %>
