<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Ventas por producto</h1>
  <div class="d-flex gap-2">
    <%= link_to "Volver al resumen", backstore_reports_path(request.query_parameters), class: "btn btn-outline-dark" %>
  </div>
</div>

<%= render "filters" %>

<% if @sales_by_product.blank? %>
  <div class="card shadow-sm p-4 mb-4">
    <p class="mb-0">
      No hay ventas de productos para los filtros seleccionados.
    </p>
  </div>
<% else %>
  <div class="card shadow-sm p-4 mb-4">
    <h2 class="h5 mb-4">Productos m√°s vendidos (cantidad)</h2>
    <%= column_chart @sales_by_product,
                     xtitle: "Producto",
                     ytitle: "Cantidad vendida" %>
  </div>
<% end %>
