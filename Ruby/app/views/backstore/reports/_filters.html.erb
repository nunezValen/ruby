<div class="card mb-4 p-3 bg-light">
  <h2 class="h6 mb-3">Filtros</h2>
  <%= form_with url: request.path, method: :get, local: true, class: "row g-3" do |f| %>
    <div class="col-md-3">
      <%= f.label :start_date, "Desde", class: "form-label" %>
      <%= f.date_field :start_date,
                       value: params[:start_date] || @start_date,
                       class: "form-control",
                       max: Date.today %>
    </div>
    <div class="col-md-3">
      <%= f.label :end_date, "Hasta", class: "form-label" %>
      <%= f.date_field :end_date,
                       value: params[:end_date] || @end_date,
                       class: "form-control",
                       max: Date.today,
                       min: (params[:start_date] || @start_date) %>
    </div>
    <div class="col-md-3">
      <%= f.label :employee_email, "Empleado (email)", class: "form-label" %>
      <%= f.select :employee_email,
                   options_for_select(@employee_emails, params[:employee_email]),
                   { include_blank: "Todos" },
                   class: "form-select" %>
    </div>
    <div class="col-md-3">
      <%= f.label :genre_id, "GÃ©nero", class: "form-label" %>
      <%= f.collection_select :genre_id, Genre.order(:name), :id, :name,
                              { include_blank: "Todos", selected: params[:genre_id] },
                              { class: "form-select" } %>
    </div>
    <div class="col-12 d-flex justify-content-end gap-2">
      <%= link_to "Limpiar", request.path, class: "btn btn-outline-dark" %>
      <%= f.submit "Aplicar filtros", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


