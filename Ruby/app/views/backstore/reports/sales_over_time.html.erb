<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Ventas en el tiempo</h1>
  <div class="d-flex gap-2">
    <%= link_to "Volver al resumen", backstore_reports_path(request.query_parameters), class: "btn btn-outline-dark" %>
  </div>
</div>

<%= render "filters" %>

<% if @sales_over_time.blank? %>
  <div class="card shadow-sm p-4">
    <p class="mb-0">
      No hay datos de ventas para el período y filtros seleccionados.
    </p>
  </div>
<% else %>
  <div class="card shadow-sm p-4">
    <h2 class="h5 mb-4">Total vendido por día</h2>
    <%= line_chart @sales_over_time,
                   xtitle: "Fecha",
                   ytitle: "Total vendido ($)",
                   thousands: ".",
                   decimal: "," %>
  </div>
<% end %>
